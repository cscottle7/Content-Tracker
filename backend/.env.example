# Application Settings
APP_NAME=Content Tracking System
DEBUG=false

# Paths
CONTENT_LIBRARY_PATH=/app/content_library
EXPORTS_PATH=/app/exports

# Database
DATABASE_URL=sqlite:///app/data/content_index.db
USERS_DATABASE_URL=sqlite:///app/data/users.db

# Security (CHANGE IN PRODUCTION)
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=200

# Export
EXPORT_CLEANUP_HOURS=1
MAX_EXPORT_ITEMS=1000
